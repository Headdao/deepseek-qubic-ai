  "managed_agents": [
    "project_manager",
    "development_team", 
    "testing_team",
    "documentation_team",
    "devops_team"
  ],
  "escalation_rules": {
    "high_priority_conflict": "immediate_intervention",
    "cross_team_blocker": "within_1_hour",
    "milestone_risk": "daily_review",
    "resource_shortage": "immediate_reallocation"
